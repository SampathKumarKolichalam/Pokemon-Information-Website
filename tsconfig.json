{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": [
      "vue",
      "nuxt",
      "@types/node"
    ]
  },
  "include": [
    ".nuxt",
    "nuxt.config.ts",
    "app/**/*.ts",
    "components/**/*.vue",
    "pages/**/*.vue",
    "server/**/*.ts",
    "types/**/*.ts"
  ]
}
